<% layout("/layouts/boilerplate") %>

  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter {
      text-align: center;
      margin-right: 1rem;
      margin-top: 1rem;
      opacity: 0.7;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    .filter p {
      font-size: 1rem;
    }

    .tax-info {
      display: none;
    }

    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 2.75rem;
      padding: 1rem;
      margin-left: 9rem;
      margin-top: 1rem;
      display: flex;
      align-items: center;
      opacity: 0.7;
    }

    .tax-toggle:hover {
      opacity: 1;
    }

    .link {
      text-decoration: none;
      color: black;
    }

    /* Enable horizontal scrolling */
    .icon-scroll {
      overflow-x: auto;
      /* Allows horizontal scrolling */
      white-space: nowrap;
      padding: 5px 0;
    }

    .icon-scroll::-webkit-scrollbar {
      height: 8px;
    }

    .icon-scroll::-webkit-scrollbar-thumb {
      background-color: rgba(0, 0, 0, 0.2);
      border-radius: 4px;
    }

    @media(max-width:1285px){
      .tax-toggle{
        margin-left: 1rem;
      }
    }
    @media(max-width:800px){
      .filter i{
        font-size: 0.8rem;
      }
      .filter p{
        font-size: 0.8rem;
      }
      .tax-toggle{
        font-size: 0.8rem;
        height: 2.5rem;
      }
    }

  </style>




  <div id="filters">
    <div class="icon-scroll d-flex flex-nowrap mb-2">
      <a href="/filter/Trending" class="link">
        <div class="filter">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </div>
      </a>
      <a href="/filter/Rooms" class="link">
        <div class="filter">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </div>
      </a>
      <a href="/filter/Iconic Cities" class="link">
        <div class="filter">
          <div><i class="fa-solid fa-city"></i></div>
          <p>Iconic Cities</p>
        </div>
      </a>
      <a href="/filter/Mountains" class="link">
        <div class="filter">
          <div><i class="fa-solid fa-mountain-sun"></i></div>
          <p>Mountains</p>
        </div>
      </a>
      <a href="/filter/Castles" class="link">
        <div class="filter">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </div>
      </a>
      <a href="/filter/Amazing Pools" class="link">
        <div class="filter">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </div>
      </a>
      <a href="/filter/Camping" class="link">
        <div class="filter">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </div>
      </a>
      <a href="/filter/Farms" class="link">
        <div class="filter">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farms</p>
        </div>
      </a>
      <a href="/filter/Arctic" class="link">
        <div class="filter">
          <div><i class="fa-regular fa-snowflake"></i></div>
          <p>Arctic</p>
        </div>
      </a>
      <a href="/filter/Beach" class="link">
        <div class="filter">
          <div><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Beach</p>
        </div>
      </a>
      <a href="/filter/Boats" class="link">
        <div class="filter">
          <div><i class="fa-solid fa-ship"></i></div>
          <p>Boats</p>
        </div>
      </a>

      <div class="tax-toggle">
        <div class="form-check form-switch form-check-reverse">
          <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
          <label class="form-check-label" for="flexSwitchCheckReverse">Display total after taxes</label>
        </div>
      </div>
    </div>

  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-2">
    <% for(let listing of allListing){%>
      <a href="/listings/<%= listing._id%>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%= listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b>
                <%= listing.title %>
              </b><br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                <i class="tax-info">&nbsp; &nbsp; 18% GST</i>
            </p>
          </div>
        </div>
      </a>
      <%}%>
  </div>

  <script>
    let taxSwitch = document.getElementById("flexSwitchCheckReverse");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (info of taxInfo) {
        if (info.style.display != "inline") {
          info.style.display = "inline";
        } else {
          info.style.display = "none";
        }
      }
    })
  </script>